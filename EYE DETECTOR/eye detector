import cv2
face_cascade = cv2.CascadeClassifier('haarcascade_frontalface_default.xml') #classifier for face detection
eye_cascade = cv2.CascadeClassifier('haarcascade_eye_tree_eyeglasses.xml') #classifier for eye detection


cap = cv2.VideoCapture(0)
# while loop is used to detect face in video
#for face detection in images only for loop is used

while cap.isOpened():
    _, img = cap.read()
#img = cv2.imread('test.png.jpg')  for face detection in image
    gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
    faces = face_cascade.detectMultiScale(gray, 1.1, 4)

 #Iterating in faces because area of interest for eye detection is face
    for (x, y, w, h) in faces:

        cv2.rectangle(img, (x, y), (x + w, y + h), (255, 0, 0), 3)
        roi_gray = gray[y:y+h, x:x+w]
        roi_color = img[y:y + h, x:x + w]
        eyes = eye_cascade.detectMultiScale(roi_gray) #used to detect eyes
        #for loop to count eyes
        for (ex, ey, ew, eh) in eyes:
            cv2.rectangle(roi_color, (ex,ey), (ex+ew, ey+eh), (0,0,255), 3)
        cv2.putText(img, 'aakanksha', (120,120), cv2.FONT_HERSHEY_PLAIN, 3, (0,0,255), 4) #its optional its just used to put text

    cv2.imshow('img', img)
   # cv2.waitKey()
    if cv2.waitKey(1) & 0xFF == ord('q'):
       break
cap.release()
